<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.newsstand" name="NewsStand" version="1.0.0" provider-name="Sagrath">
    <requires>
        <!--
            Check main addon versions in https://github.com/xbmc/xbmc/tree/master/addons
            Change the branch according to the Kodi version.
            Kodi 17 Krypton | xbmc.python 2.25.0 | script.module.pil 1.1.7
            Kodi 18 Leia    | xbmc.python 2.26.0 | script.module.pil 1.1.7
            Kodi 19 Matrix  | xbmc.python 3.0.0  | script.module.pil 5.1.0
        -->
        <import addon="xbmc.python" version="3.0.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Build your library of magazines, comics, periodicals and other types of print publications.</summary>
        <description lang="en_GB">With Newsstand you can have your magazine collection on Kodi, with a large database for the most diverse types of magazines. Use your favorite reader and customize all artwork and descriptions.</description>
        <platform>windows</platform>
        <license>GPL-2.0-only</license>
        <email></email>
        <forum></forum>
        <website></website>
        <source></source>
        <assets>
            <icon>media/icon.png</icon>
            <fanart>media/fanart.jpg</fanart>
            <screenshot></screenshot>
            <screenshot></screenshot>
            <screenshot></screenshot>
        </assets>
        <news></news>
    </extension>
</addon>
